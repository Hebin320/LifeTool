<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_110">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_new"
            android:layout_width="@dimen/margin_120"
            android:layout_height="@dimen/margin_90"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_toRightOf="@+id/iv_new"
            android:gravity="center|left"
            android:maxLines="2"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/tv_ly"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_22"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/border"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="来源"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_22"
            android:layout_alignBottom="@+id/tv_ly"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/tv_ly"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_view" />
    </RelativeLayout>
</android.support.v7.widget.CardView>